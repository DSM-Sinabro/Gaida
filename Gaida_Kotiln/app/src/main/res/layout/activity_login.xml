<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:background="#E1F5FE"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <TextView
            android:fontFamily="@font/yun"
            android:textSize="42sp"
            android:textStyle="bold"
            android:text="가이다 로그인"
            android:textColor="@android:color/black"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">


            <EditText
                android:id="@+id/id"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/yun"
                android:hint="ID"
                android:textSize="24sp"
                android:theme="@style/EditTextStyle"
                android:padding="10dp"
                android:textColor="#000"
                android:textColorHint="#000" />


            <EditText
                android:id="@+id/password"
                android:password="true"
                android:theme="@style/EditTextStyle"
                android:layout_width="280dp"
                android:layout_below="@+id/id"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/yun"
                android:textSize="24sp"
                android:layout_marginTop="20dp"
                android:hint="Password"
                android:padding="10dp"
                android:textColor="#000"
                android:textColorHint="#000" />


            <TextView
                android:id="@+id/password_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/cb_login_remember"
                android:layout_alignEnd="@+id/password"
                android:layout_toLeftOf="@id/password"
                android:layout_marginBottom="4dp"
                android:padding="14dp"
                android:textStyle="bold"
                android:fontFamily="@font/yun"
                android:text="특수문자를 확인해주세요"
                android:textColor="@color/lime"
                android:textSize="18sp"
                android:visibility="gone" />


            <CheckBox
                android:fontFamily="@font/yun"
                android:layout_marginTop="8dp"
                android:layout_below="@id/password"
                android:id="@+id/cb_login_remember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/password"
                android:textSize="18sp"
                android:layout_centerHorizontal="true"
                android:text="자동 로그인"
                android:textColor="@android:color/black"
                android:buttonTint="@color/blue" />


            <Button
                android:id="@+id/loginButton"
                android:layout_width="280dp"
                android:layout_below="@+id/cb_login_remember"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="로그인"
                android:fontFamily="@font/yun"
                android:textStyle="bold"
                android:elevation="4dp"
                android:background="@color/main_color"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

        <Button
            android:id="@+id/facebookButton"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/yun"
            android:textStyle="bold"
            android:text="페이스북으로 로그인하기"
            android:textColor="@android:color/black"
            android:background="@color/main_color"
            android:elevation="4dp"
            android:layout_alignStart="@+id/loginButton"
            android:layout_below="@+id/loginButton"
            android:layout_marginTop="12dp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:textSize="24sp" />

            <TextView
                android:id="@+id/signUpTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회원가입"
                android:fontFamily="@font/yun"
                android:layout_marginTop="12dp"
                android:layout_below="@+id/facebookButton"
                android:textSize="16dp"
                android:layout_centerInParent="true"
                android:textColor="@android:color/black" />

        </RelativeLayout>
</LinearLayout>