<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:elevation="4dp"
        android:background="#fff">

        <ImageButton
            android:id="@+id/ib_toolbar_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:background="@color/colorWhite"
            android:src="@drawable/ic_arrow_back_black_24dp" />

        <TextView
            android:id="@+id/tv_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:text="로그인(가이다)"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#fff"
        android:layout_weight="5">


        <ImageView
            android:id="@+id/loginImage"
            android:layout_marginTop="24dp"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:paddingBottom="32dp"
            android:paddingLeft="72dp"
            android:paddingRight="72dp"
            android:paddingTop="32dp"
            android:src="@drawable/login" />


        <TextView
            android:layout_below="@+id/loginImage"
            android:layout_marginTop="12dp"
            android:textSize="14sp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/loginIntro"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#fff"
        android:layout_weight="4">


        <EditText
            android:id="@+id/id"
            android:layout_width="match_parent"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_alignParentTop="true"
            android:drawableLeft="@drawable/password_icon"
            android:layout_marginTop="4dp"
            android:drawablePadding="8dip"
            android:textColor="#000"
            android:textColorHint="#F5F5F5"
            android:hint="가이다 아이디"
            android:textSize="14sp"
            android:theme="@style/EditTextStyle"
            android:layout_height="wrap_content" >

        </EditText>


        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_marginLeft="32dp"
            android:textSize="14sp"
            android:textColorHint="#F5F5F5"
            android:layout_marginRight="32dp"
            android:textColor="#000"
            android:hint="비밀번호"
            android:layout_below="@+id/id"
            android:drawableLeft="@drawable/password_icon"
            android:drawablePadding="8dip"
            android:layout_marginTop="12dp"
            android:theme="@style/EditTextStyle"
            android:layout_height="wrap_content" />
        
        <RelativeLayout
            android:padding="4dp"
            android:layout_below="@+id/password"
            android:id="@+id/layout_auto_text"
            android:layout_width="match_parent"
            android:layout_height="50dp">

        <TextView
            android:id="@+id/tv_auto_login"
            android:text="자동 로그인 약관"
            android:textColor="#F50057"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_toRightOf="@+id/tv_auto_login"
            android:id="@+id/tv_auto_login_add"
            android:layout_centerVertical="true"
            android:text="에 동의"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_login_check"
            android:layout_marginRight="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/unchecked_normal"
            android:layout_width="50dp"
            android:padding="4dp"
            android:scaleType="fitCenter"
            android:layout_height="50dp" />

        </RelativeLayout>
        
        <Button
            android:id="@+id/loginButton"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:textColor="#fff"
            android:layout_marginTop="8dp"
            android:text="로그인"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_below="@+id/layout_auto_text"
            android:background="#F50057"
            android:layout_height="50dp" />

    </RelativeLayout>
</LinearLayout>